<form action="/documents/<%=params["id"]%>" method="post" >
    <div =id="edit_document" contenteditable="true">
      <p>
        <label for="new_title">Title</label>
        <input type="text" name="title" value="<%= @document["title"] %>" id="new_title" disabled >
        <br>
        <label for="new_author">Author</label>
        <input type="text" name="author" value="<%= @document["author"] %>" id="new_author" disabled>
        <br>
        <textarea type="text"  name="article_text" id="text" multiline cols="60" rows="20" wrap=soft disabled><%= render_to_html(@document["text"]) %>"
        </textarea>
      </p>
    </div>
    <input for="delete" type='hidden' name='_method' value="DELETE" />
    <button id="edit" type="submit">Remove</button>
</form>
